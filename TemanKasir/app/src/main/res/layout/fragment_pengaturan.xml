<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayf2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvUsernameAkunFragPengaturan"
                    android:text="Username"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/metropolis_bold"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNamaBisnisFragPengaturan"
                    android:text="Nama Bisnis"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/metropolis_light"
                    android:ellipsize="end"
                    android:maxLines="1"/>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:id="@+id/civPhotoProfileFragPengaturan"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/llProfileAkunFragPengaturan">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Akun"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/metropolis_medium"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_arrow_right_darkorange"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/graya3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:id="@+id/llPengaturanBisnisFragPengaturan">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bisnis Anda"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/metropolis_medium"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_arrow_right_darkorange"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/graya3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:id="@+id/llPengaturanOutletFragPengaturan">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Outlet Anda"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/metropolis_medium"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_arrow_right_darkorange"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/graya3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:id="@+id/llPengaturanKasirFragPengaturan">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atur Kasir"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/metropolis_medium"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_arrow_right_darkorange"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:id="@+id/llPengaturanItemFragPengaturan"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atur Item"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/metropolis_medium"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_arrow_right_darkorange"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/graya3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:id="@+id/llPengaturanPromoDiskonFragPengaturan">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atur Promo / Diskon"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/metropolis_medium"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_arrow_right_darkorange"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/graya3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:id="@+id/llMetodePembayaranFragPengaturan">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metode Pembayaran"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/metropolis_medium"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_arrow_right_darkorange"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/graya3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:id="@+id/llPengaturanPelangganFragPengaturan">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atur Pelanggan"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/metropolis_medium"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_arrow_right_darkorange"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:id="@+id/llKebijakanPrivasiFragPengaturan"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kebijakan Privasi"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/metropolis_medium"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_arrow_right_darkorange"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/graya3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:id="@+id/llPusatBantuanFragPengaturan">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pusat Bantuan"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/metropolis_medium"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_arrow_right_darkorange"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/graya3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:id="@+id/llKirimSaranFragPengaturan">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kirim Saran"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/metropolis_medium"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_arrow_right_darkorange"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:cardBackgroundColor="@color/rednotif"
            app:cardCornerRadius="@dimen/_5sdp"
            android:id="@+id/cvLogoutFragPengaturan">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KELUAR"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/metropolis_extrabold"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>