<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@color/white"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvListNamaItemPreviewPesanan"
            android:text="Nama Item"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/metropolis_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvListHargaItemPreviewPesanan"
                android:text="Harga Item"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/gray8b"
                android:fontFamily="@font/metropolis_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/gray8b"
                android:fontFamily="@font/metropolis_regular"
                android:layout_marginHorizontal="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvListJumlahItemPreviewPesanan"
                android:text="0"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/gray8b"
                android:fontFamily="@font/metropolis_regular"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvListSubTotalPreviewPesanan"
        android:text="Subtotal"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/metropolis_bold"
        android:layout_weight="1"
        android:textAlignment="textEnd"
        android:layout_gravity="center_vertical"/>
</LinearLayout>