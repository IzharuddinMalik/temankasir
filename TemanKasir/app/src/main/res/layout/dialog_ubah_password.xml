<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/tosca">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verifikasi Password"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/metropolis_bold"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_baseline_close_24"
            android:id="@+id/ivCloseVerifikasiPassword"
            android:layout_margin="@dimen/_10sdp"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:hint="Masukkan Password Lama"
        android:textColorHint="@color/gray8b"
        android:layout_weight="1">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tietVerifikasiPassword"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/metropolis_medium"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/darkOrange"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_gravity="bottom"
        android:id="@+id/cvVerifikasiPassword">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verifikasi Password"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_margin="@dimen/_10sdp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>